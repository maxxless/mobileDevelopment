<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/independence"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_photo_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/profile">
            </ImageView>

            <ImageView
                android:id="@+id/profile_photo_edit_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_add_photo"
                android:contentDescription="@string/users">
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/profile_edit_done_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_edit_done"
            android:contentDescription="@string/profile" />

        <EditText
            android:id="@+id/profile_edit_name_et"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/profile_edit_id_et"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profile_city_edit_et"
                android:textSize="17sp"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="300dp"
                android:layout_height="50dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <EditText
                        android:id="@+id/profile_mobile_edit_et"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/phone"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/ic_phone"
                    android:contentDescription="@string/phone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <!--Email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <EditText
                        android:id="@+id/profile_email_edit_et"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/email"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/ic_email"
                    android:contentDescription="@string/email" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <EditText
                android:id="@+id/profile_company_edit_et"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>